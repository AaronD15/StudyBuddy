<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_bright_foreground_holo_dark"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/groups_list"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_column="0"
            android:layout_row="0"
            android:visibility="visible" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/AddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="top|right"
            android:layout_margin="5dp"
            android:layout_row="0"
            android:clickable="true"
            android:visibility="visible"
            app:backgroundTint="@color/colorPrimaryDark"
            app:elevation="2dp"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:text="TextView"
            android:textAllCaps="true"
            android:textColor="@color/common_google_signin_btn_text_light_pressed"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/reviewT"
            tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:text="TextView"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="49dp" />

        <TextView
            android:id="@+id/reviewT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:text="RATING:"
            android:textColor="@color/wallet_bright_foreground_holo_light"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="83dp" />

        <TextView
            android:id="@+id/textWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Wi-Fi Connection"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/pop_ratingbar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level of Loudness"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="5"
            android:stepSize="1" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Recommended Time"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/besttimedislay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Morning:40% Afternoon:50% Night:10%"
            android:textSize="18sp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="5dp"
            android:clickable="true"
            android:visibility="visible"
            app:elevation="1dp"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/btn_star_big_on" />

    </LinearLayout>

</LinearLayout>