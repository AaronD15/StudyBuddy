<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_bright_foreground_holo_dark"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="1">

    <TextView
        android:id="@+id/textV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please rate this study place:"
        android:textColor="@drawable/cast_album_art_placeholder"
        android:textSize="18sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/rateT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_margin="5dp"
        android:layout_row="2"
        android:text="Rate the following from 0 to 5"
        android:textColor="@color/wallet_bright_foreground_holo_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:ems="10"
            android:inputType="number"
            android:visibility="visible" />

        <TextView
            android:id="@+id/texWifi"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="1"
            android:text="Wi-Fi Connection"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textSize="18sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:ems="10"
            android:inputType="number"
            android:visibility="visible" />

        <TextView
            android:id="@+id/RecommendedT"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_margin="5dp"
            android:layout_row="2"
            android:text="Recommended Time"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/LOL"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Level of Loudness"
            android:textColor="@color/cast_intro_overlay_background_color"
            android:textSize="18sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editText4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:ems="10"
            android:inputType="number"
            android:visibility="visible" />

    </GridLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:visibility="visible"
        app:elevation="11dp"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add" />

</LinearLayout>